{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist/tsc"
  },
  "include": ["src/**/*.ts"]
}
